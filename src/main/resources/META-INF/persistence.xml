<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="unidadePersistencia"
		transaction-type="JTA">

		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<jta-data-source>java:jboss/datasources/postgresql/restauranteDS</jta-data-source>

		<class>br.com.fa7.restaurante.model.Usuario</class>
		<class>br.com.fa7.restaurante.model.Funcionario</class>
		<class>br.com.fa7.restaurante.model.Cliente</class>
		<class>br.com.fa7.restaurante.model.Loja</class>

		<properties>

			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />

		</properties>

	</persistence-unit>

</persistence>
